{
  "name": "backend",
  "version": "1.0.50",
  "scripts": {
    "migrate": "prisma migrate deploy",
    "db:reset": "dotenv -e .env -- prisma migrate reset --force",
    "seed": "bun run src/utility/seedGlobalRoles.ts",
    "test": "bun run db:reset && bun run seed && bun test",
    "dev": "bun run --watch src/index.ts"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "elysia": "latest",
    "pg": "^8.18.0"
  },
  "devDependencies": {
    "@types/pg": "^8.16.0",
    "bun-types": "latest",
    "dotenv-cli": "^11.0.0",
    "prisma": "^7.3.0"
  },
  "module": "src/index.js",
  "imports": {
    "#/*": "./src/*"
  }
}
